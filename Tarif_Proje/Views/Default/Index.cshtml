
@using Tarif_Proje.Models.EntityFramework
@model List<Tbl_Yemekler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Ana_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Basic meta info
    ==================== -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Recipe Book</title>

    <!-- Favicon
    ============ -->
    <link rel="apple-touch-icon" sizes="57x57" href="~/recipe/images/favicon/apple-icon-57x57.png" />
    <link rel="apple-touch-icon" sizes="60x60" href="~/recipe/images/favicon/apple-icon-60x60.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="~/recipe/images/favicon/apple-icon-72x72.png" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/recipe/images/favicon/apple-icon-76x76.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="~/recipe/images/favicon/apple-icon-114x114.png" />
    <link rel="apple-touch-icon" sizes="120x120" href="~/recipe/images/favicon/apple-icon-120x120.png" />
    <link rel="apple-touch-icon" sizes="144x144" href="~/recipe/images/favicon/apple-icon-144x144.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="~/recipe/images/favicon/apple-icon-152x152.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/recipe/images/favicon/apple-icon-180x180.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="~/recipe/images/favicon/android-icon-192x192.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/recipe/images/favicon/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/recipe/images/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="96x96" href="~/recipe/images/favicon/favicon-96x96.png" />

    <!-- CSS files
    ============== -->
    <link rel="stylesheet" type="text/css" href="~/recipe/css/reset.css" />
    <link rel="stylesheet" type="text/css" href="~/recipe/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/recipe/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="~/recipe/css/animate.min.css" />
    <link rel="stylesheet" type="text/css" href="~/recipe/css/styles.css" />
    <style>
        a:hover 
        {
            color:orangered;
        }
    </style>
    <!-- Modernizr file
    =================== -->
    <script charset="utf-8" type="text/javascript " src="~/recipe/js/modernizr.custom.js"></script>

</head>

<body>
    <section id="items">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 name="ustanabaslik">Yiyecek ve İçecekler</h2>
                    <h5 name="ensoneklenenler">En son eklenenler</h5>
                </div>
            </div>
            <div class="row">
                <!-- First recipe item -->
                @foreach (var ymk in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 wow fadeIn">
                        <div class="recipe-item text-center">
                            <a href="/Default/YemekDetay/@ymk.IdValue">
                                <img src="@ymk.RESİM" style="width:340px;height:340px" alt="bbq-pork-ribs" />
                            </a>
                            <br />
                            <h3>@ymk.AD</h3>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Website Footer
    =================== -->
    <!-- JavaScript files
    ===================== -->
    <script charset="utf-8" src="~/recipe/js/jquery-3.3.1.min.js"></script>
    <script charset="utf-8" src="~/recipe/js/bootstrap.min.js"></script>
    <script charset="utf-8" src="~/recipe/js/wow.min.js"></script>
    <script charset="utf-8" src="~/recipe/js/scripts.js"></script>
</body>

</html>




